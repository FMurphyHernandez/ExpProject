x=read.csv('MOD_EXP.csv')
for(i in 1:ncol(x))
x[,i]=as.numeric(x[,i])
colnames(x)[1]="EXP"
x.scaled=scale(x[,-1])
y=cbind(x[,1],x.scaled)
y=data.frame(y)
colnames(y)[1]='EXP'
require(MASS)

n=100
P=(1:n)/n
LDA=vector()
for(i in 1:100)
  {
  z=lda(formula=EXP~.,data=y, prior=c(P[i],1-P[i]))
  LDA[i]=z$prior
  }
